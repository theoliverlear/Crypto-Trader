{
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "outDir": "./",
    "rootDir": "./",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./angular/**/*.ts"],
  "exclude": [
    "./node_modules",
    "./Crypto-Trader-Api/src/main/resources/static/script/bundle.js",
    "./angular/**/*.js",
    "./angular/**/*.d.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}